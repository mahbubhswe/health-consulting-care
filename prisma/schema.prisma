generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  phone    String @unique
  email    String @unique
  password String
}

model Doctor {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  fullName       String
  departmentName String
  phone          String        @unique
  email          String        @unique
  gender         String
  roomNumber     Int
  password       String
  appointment    Appointment[]

  joiningDate DateTime @default(now())
}

model Patient {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  phone       String        @unique
  gender      String
  password    String
  appointment Appointment[]
  joiningDate DateTime      @default(now())
}

model Appointment {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  patient        Patient @relation(fields: [patientPhone], references: [phone], onDelete: Cascade)
  patientPhone   String
  doctor         Doctor  @relation(fields: [doctorPhone], references: [phone], onDelete: Cascade)
  doctorPhone    String
  doctorName     String
  departmentName String
  roomNumber     Int
  status         String  @default("panding")
  time           String
}

model Medicine {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  medicineName String
  brand        String
  price        Int
  quantity     Int
}

model BloodBank {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  phone            String @unique
  bloodGroup       String @unique
  address          String
  gender           String
  lastDonationDate String
}

model Ambulance {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  ambulanceNumber Int    @unique
    status      String @default("free")
}
model AmbulanceBooking {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone String
  pickupPoint String
  destination String
  date String
  time String
  ambulanceNumber Int
  status String  @default("pending")
  createdAt DateTime      @default(now())
}
model Cabin {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  roomAndCabinNumber  String @unique
  status      String @default("free")
}
model CabinBooking {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone String
  date String
  time String
roomAndCabinNumber String
  status String  @default("pending")
  createdAt DateTime      @default(now())
}